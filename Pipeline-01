pipeline{
    tools{
        maven 'mymaven'
    }
    agent any
    
    stages{
        stage('clone the repo')
        {
          steps{
              git 'https://github.com/ajinkya517-web/DevOpsCodeDemo.git'
          }  
        }
        stage('compile the code')
        {
            steps{
                sh 'mvn compile'
            }
        }
        stage('code review')
        {
            steps{
                sh 'mvn pmd:pmd'
            }
        }
        stage('test the code')
        {
            steps{
                sh 'mvn test'
            }
        }
        stage('Build the code')
        {
            steps{
                sh 'mvn package'
            }
        }
    }
}
